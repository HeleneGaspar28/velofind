<div class="col-md-10 mb-4">
  <div class="match-card bg-white border rounded-4 shadow-sm p-4">
      <div class="row">

        <!-- LEFT SIDE: Text info -->
        <div class="col-md-6">
          <!-- Bike info line -->
          <p class="text-muted mb-2">
            <strong>Bike:</strong>
            <%= "#{match.bike.brand} #{match.bike.model}" %>
          </p>
          <!-- Match title + score + time aligned in one row -->
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center gap-2">
              <h5 class="fw-bold mb-0">Match #<%= index + 1 %></h5>
              <span class="badge bg-danger text-white"><%= match.match_score%>% match</span>
            </div>
            <!--mock data, needs to adjust: -->
            <small class="text-muted">Found <%= time_ago_in_words(match.created_at) %> ago</small>
          </div>

          <%# Match found, details %>
          <div class="mb-3">
            <p class="mb-2"><strong>Platform:</strong> <%= match.marketplace %></p>
            <p class="mb-2"><strong>Price:</strong> â‚¬<%= match.price %></p>
            <p class="mb-2"><strong>Seller:</strong> <%= match.seller.presence || "Unknown" %></p>
            <p class=""><strong>Location:</strong> <%= match.location %></p>
            <p class="mb-2"><strong>Matched Fields:</strong>
              <% if match.matched_fields.present? %>
                <% match.matched_fields.each do |field| %>
                  <span class="badge bg-success"><%= field.to_s.humanize %></span>
                <% end %>
              <% else %>
                <span class="text-muted">N/A</span>
              <% end %>
            </p>
          </div>
        </div>

        <!-- RIGHT SIDE: Image + buttons -->
        <div class="col-md-6 d-flex flex-column justify-content-between">
          <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 180px;">
            <span class="text-muted">Image placeholder</span>
          </div>

          <div class="d-flex gap-2">
            <!-- buttons without any action -->
            <%= link_to "Report Stolen", new_bike_match_report_path(match.bike, match), class: "btn cta-button btn-lg w-100", style: "background-color: red; color: white;" %>

            <% if match.report.present? %>
              <%= link_to "See Report", bike_match_report_path(match.bike, match, match.report), class: "btn btn-primary-custom w-100" %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
