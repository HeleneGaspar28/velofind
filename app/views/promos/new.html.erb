<h2>Add New Promo</h2>

<%= form_with model: @promo, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :promocode %><br>
    <%= form.text_field :promocode %>
  </div>

  <div>
    <%= form.label :website_url %><br>
    <%= form.text_field :website_url %>
  </div>

  <%= form.submit "Create Promo" %>
<% end %>
