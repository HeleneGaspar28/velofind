<div class="container my-5">
  <!-- header -->
  <h1 class="h3 mb-2 text-blue">Police Report</h1>
  <!-- subtitle  -->
  <p class="text-muted mb-4">
  monitoring your <strong><%= @match.bike.brand %> <%= @match.bike.model %> <%= @match.bike.frame_number %>.</strong>
  </p>

  <!-- alert  -->
<div class="matches-alert alert-warning mb-4" role="alert">
  <div>
    <strong>Potential match found!</strong>
    Please confirm the info you will find below.
  </div>
</div>

<div class="container d-flex flex-column align-items-center">
<!-- Overview and Police Report -->
  <div class="tab-container d-flex justify-content-center py-1 mb-1 w-50">
    <a href="#" class="tab">Overview</a>
    <div class="tab active">Police Report</div>
  </div>


  <!-- Victim Information -->
  <div class="w-50 py-2 mb-4">
    <div class="card text-center">
      <div class="card-body d-flex align-items-center justify-content-center gap-3">
        <div class="text-start">
          <h4 class="card-title mb-0">Victim Information</h4>
          <p class="card-text text-muted"><strong>First name: </strong><%= @match.bike.user.first_name %></p>
          <p class="card-text text-muted"><strong>last name: </strong><%= @match.bike.user.last_name %></p>
          <p class="card-text text-muted"><strong>Email: </strong><%= @match.bike.user.email %></p>
          <p class="card-text text-muted"><strong>Phone number: </strong><%= @match.bike.user.phone_number %></p>
        </div>
      </div>
    </div>
  </div>
  <!-- Bike Information -->
  <div class="w-50 py-2 mb-4">
    <div class="card text-center">
      <div class="card-body d-flex align-items-center justify-content-center gap-3">
        <div class="text-start">
          <h4 class="card-title mb-0">Bike Information</h4>
          <p class="card-text text-muted"><strong>Bike brand: </strong><%= @match.bike.brand%></p>
          <p class="card-text text-muted"><strong>Bike frame number: </strong><%= @match.bike.frame_number %></p>
          <p class="card-text text-muted"><strong>Bike model: </strong><%= @match.bike.model %></p>
          <p class="card-text text-muted"><strong>Location of the theft: </strong><%= @match.bike.location_lost %></p>
          <p class="card-text text-muted"><strong>Date of the theft: </strong><%= @match.bike.stolen_date %></p>
        </div>
      </div>
    </div>
  </div>
   <div class="w-50 py-2 mb-4">
    <div class="card text-center">
      <div class="card-body d-flex align-items-center justify-content-center gap-3">
        <div class="text-start">
          <h4 class="card-title mb-0">Theft Information</h4>
          <p class="card-text text-muted"><strong>Marketplace where the bike was found: </strong><%= @match.marketplace %></p>
          <p class="card-text text-muted"><strong>Name of the seller: </strong><%= @match.seller %></p>
          <p class="card-text text-muted"><strong>Actual location: </strong><%= @match.location %></p>
        </div>
      </div>
    </div>
  </div>
