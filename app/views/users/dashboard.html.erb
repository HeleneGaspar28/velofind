<!-- header  -->
<div class="container my-5">
  <h1 class="h3 mb-2 text-blue">Search Dashboard</h1>
  <!-- subtitle  -->
  <p class="text-muted mb-4">
    Monitoring your <strong><%= @bikes.count %></strong> bike<%= "s" unless @bikes.count == 1 %>
  </p>

  <!-- alert  -->
  <% if @total_matches > 0 %>
    <div class="matches-alert alert-warning mb-4" role="alert">
      <div>
        <strong>Potential matches found!</strong>
        We've detected <strong><%= @total_matches %></strong> possible match<%= "es" unless @total_matches == 1 %> across your bikes. Review them and take action if needed.
      </div>
    </div>
  <% end %>

  <!-- Dashboard cards  -->
  <div class="row g-3">
    <!-- Bikes search -->
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body d-flex align-items-center justify-content-center gap-3">
          <!-- I NEED TO CHANGE THE IMAGE!!!!! -->
          <%= image_tag("search.png", alt: "Search Icon", class: "img-fluid", style: "width: 32px; height: 32px;") %>
          <div class="text-start">
            <h4 class="card-title mb-0"><%= @active_bikes %></h4>
            <p class="card-text text-muted">Bikes being searched</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Potential Matches -->
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body d-flex align-items-center justify-content-center gap-3">
          <%= image_tag("potential-matches-icon.svg", alt: "Matches Found Icon", class: "img-fluid", style: "width: 32px; height: 32px;") %>
          <div class="text-start">
            <h4 class="card-title mb-0"><%= @total_matches %></h4>
            <p class="card-text text-muted">Potential Matches</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Confirmed Matches -->
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body d-flex align-items-center justify-content-center gap-3">
          <%= image_tag("confirmed-matches-icon.svg", alt: "Confirmed Matches Icon", class: "img-fluid", style: "width: 32px; height: 32px;") %>
          <div class="text-start">
            <h4 class="card-title mb-0"><%= @confirmed_matches %></h4>
            <p class="card-text text-muted">Confirmed Matches</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Reports -->
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body d-flex align-items-center justify-content-center gap-3">
           <%= image_tag("report.png", alt: "Reports Icon", class: "img-fluid", style: "width: 32px; height: 32px;") %>
          <div class="text-start">
            <!--Missing real data -->
            <h4 class="card-title mb-0">1</h4>
            <p class="card-text text-muted">Reports Submitted</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- bikes -->
<div class="container my-5">
  <h2 class="h5 mb-3">Bikes</h2>

  <% @bikes.each do |bike| %>
    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">

        <% if bike.pictures.any? %>
          <div class="me-3">
            <%= cl_image_tag bike.pictures.first.key, alt: "Bike photo", class: "img-thumbnail", style: "width: 120px; height: auto;" %>
          </div>
        <% end %>

        <div class="w-100">
          <div class="row">
            <div class="col-md-4 mb-2">
              <i class="fas fa-bicycle me-1"></i> <%= bike.brand %>
            </div>
            <div class="col-md-4 mb-2">
              <i class="fas fa-hashtag me-1"></i> <%= bike.frame_number %>
            </div>
            <div class="col-md-4 mb-2">
              <i class="fas fa-tag me-1"></i> <%= bike.model %>
            </div>
            <div class="col-md-4 mb-2">
              <i class="fas fa-palette me-1"></i> <%= bike.color %>
            </div>
            <div class="col-md-4 mb-2">
              <i class="fas fa-calendar-alt me-1"></i> <%= bike.stolen_date.present? ? bike.stolen_date.strftime("%Y-%m-%d") : '—' %>
            </div>
            <div class="col-md-4 mb-2">
              <i class="fas fa-map-marker-alt me-1"></i> <%= bike.location_lost.presence || '—' %>
            </div>
          </div>
        </div>

        <div class="d-flex gap-2 ms-3">
          <%= link_to "Matches (#{bike.matches.count})", bike_matches_path(bike), class: "btn btn-primary-custom" %>
          <button class="btn btn-outline-custom" data-bs-toggle="modal" data-bs-target="#editBikeModal-<%= bike.id %>">
            Edit
          </button>
        </div>
      </div>
    </div>

    <!-- Edit Bike Modal -->
    <div class="modal fade" id="editBikeModal-<%= bike.id %>" tabindex="-1" aria-labelledby="editBikeModalLabel-<%= bike.id %>" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content p-3">
          <div class="modal-header border-0">
            <h5 class="modal-title" id="editBikeModalLabel-<%= bike.id %>">Edit Bike Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <%= simple_form_for bike, url: bike_path(bike), method: :patch, html: { class: 'modal-form' } do |f| %>
            <div class="modal-body">
              <div class="mb-3">
                <%= f.input :brand, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              </div>
              <div class="mb-3">
                <%= f.input :frame_number, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              </div>
              <div class="mb-3">
                <%= f.input :model, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              </div>
              <div class="mb-3">
                <%= f.input :color, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              </div>
              <div class="mb-3">
                <%= f.input :stolen_date,
                  as: :string,
                  input_html: { data: { controller: "datepicker" } } %>
              </div>
              <div class="mb-3">
                <%= f.input :location_lost, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
              </div>
              <div class="mb-3">
                <%= f.input :pictures, as: :file, label: "Upload Pictures", input_html: { multiple: true, class: "form-control" } %>
              </div>
            </div>
            <div class="modal-footer border-0">
              <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
              <%= f.button :submit, "Save changes", class: "btn btn-primary-custom" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>


<!-- discounts section -->
<div class="container my-5">
  <h2 class="h5 mb-4">Discounts</h2>

  <% @promos.each do |promo| %>
    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="me-3">
          <div class="fw-semibold"><%= promo.name %></div>
          <div class="text-muted small mb-0"><%= promo.description %></div>
        </div>
        <button class="btn btn-outline-custom" data-bs-toggle="modal" data-bs-target="#promoModal-<%= promo.id %>">
          Get Promo code
        </button>
      </div>
    </div>

    <!-- Promo Modal -->
    <div class="modal fade" id="promoModal-<%= promo.id %>" tabindex="-1" aria-labelledby="promoModalLabel-<%= promo.id %>" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4">
          <div class="modal-header border-0">
            <h5 class="modal-title" id="promoModalLabel-<%= promo.id %>">Your Promo Code</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-center">
            <div class="d-flex justify-content-center align-items-center mb-3">
              <div class="border rounded-4 px-4 py-3 d-flex align-items-center bg-light" data-controller="promo-copy">
                <h4 class="mb-0 me-3" data-promo-copy-target="code"><%= promo.promocode.upcase %></h4>
                <button class="btn btn-outline-secondary d-flex align-items-center gap-1 rounded-4"
                        data-action="click->promo-copy#copy"
                        aria-label="Copy promo code">
                  <%= image_tag("copy-icon.svg", width: 16, height: 16, alt: "Copy icon") %>
                </button>
              </div>
            </div>
            <%= link_to "Go to the page to buy product", promo.website_url, class: "btn btn-link", target: "_blank", rel: "noopener" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
